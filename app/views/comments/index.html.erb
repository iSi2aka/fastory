<div class='main-body'>
  <%= render "shared/side_header" %>
  
  <%= render partial: "shared/menus/comment_index", locals: { post: @post } %>
  
  <div class='main'>
    <%= render partial: "shared/top_header/pt_name", locals: { post: @post } %>

    <div class='post-show'>
      <div class="post-info">
       <%= render partial: "shared/scenario", locals: { post: @post } %>
       <%= simple_format(@post.story)%>
      </div>
      <div class='comment-index'>
        <span class="indispensable">　評価ポイント　</span><br/><br/>
        <%= simple_format(@post.point) %>
      </div>
    </div>

    <div class="comment-new">
      <%= form_with model: @comment, url: post_comments_path, class: 'comment-new-main', local: true do |f| %>
        <div class="field">
          <%= f.text_area :comment, placeholder: "" %>
        </div>
        <div class="btn-contents">
          <%= f.submit "投稿する", data: { turbo_method: :get, turbo_confirm: ( render "shared/error_messages", model: f.object ) } ,class:"post-btn" %>
        </div>
      <% end %>
   </div>
</div>






