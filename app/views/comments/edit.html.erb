<div class='main-body'>
  <%= render partial: "shared/side_header/comment_index", locals: { post: @post } %>
  
  <div class='menus'>
    <%= render partial: "shared/menus/comment_index", locals: { post: @post } %>
  </div>
  
  <div class='main'>
    <%= render partial: "shared/top_header/pt_name", locals: { post: @post } %>

    <div class='post-show'>
      <div class="post-info">
       <%= render partial: "shared/scenario", locals: { post: @post } %>
       <%= simple_format(@post.story)%>
      </div>
      <div class='comment-index'>
        評価ポイント<br/><br/>
        <%= simple_format(@post.point) %>
      </div>
    </div>

    <div class="comment-new">
      <%= form_with model: @comment, url: post_comment_path, class: 'comment-new-main', local: true do |f| %>
        <div class="field">
          <%= f.text_area :comment, placeholder: "" %>
        </div>
        <div class="btn-contents">
         <%= f.submit "変更する", data: { turbo_method: :get, turbo_confirm: ( render "shared/error_messages", model: f.object ) } ,class:"post-btn" %>
       </div>
    <% end %>
  </div>
</div>