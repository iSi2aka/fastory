<% if user_signed_in? && post.liked_by?(current_user)%>
  <%=link_to image_tag("ハートのアイコン素材 1 (青).png", class: "liked-icon"), post_likes_path(post.id), data: { turbo_method: :delete }, class: "post_likes" , remote: true %>
<% else %>
  <%=link_to image_tag("ハートのアイコン素材 1 (灰).png", class: "like-icon"), post_likes_path(post.id), data: { turbo_method: :post }, class: "post_likes" , remote: true %>
<% end %>
