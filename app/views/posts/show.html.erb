<h1>Posts#show</h1>

<div class='post-show'>
  <div class='show-header'>
    <%= @post.name %> （<%= @post.age %>）
    <%= Sex.find(@post.sex_id).name %>
  </div>

  <div class='show-main'>
    <div class='post-images'>
      <%= link_to image_tag("ハートの心電図のアイコン素材 2.png", class:"image-icon"), @post.image if @post.image.attached?%>
    </div>

    <div class='post-info'>
      <div class='ABCDE'>
        <%= @post.airway %>
        <%= @post.breathing %>
        <%= @post.circulation %>
        <%= @post.dysfunction_cns %>
        <%= @post.exposure %>
      </div>
      <div class='AMPLER'>
        <%= @post.allergy %>
        <%= @post.medicine %>
        <%= @post.past_history %>
        <%= @post.last_meal %>
        <%= @post.event %>
        <%= @post.risk_factor %>
        <%= @post.others %>
      </div>
    </div>

    <div class='post-story'>
      <%= @post.story %>
    </div>

    <div class='post-point'>
      <%= @post.point %>
    </div>
  </div>

  <% if user_signed_in? %> 
    <%= "シナリオを実施する" %><br/>
    <% if current_user.id == @post.user_id %>
      <%= link_to "シナリオの編集", edit_post_path(@post) %>
      <%= link_to "シナリオの削除", post_path(@post), data: { turbo_method: :delete } %>
    <% else %>
      <%= "シナリオを添削する" %>
    <% end %>
  <% end %>

</div>

<%=link_to 'もどる', root_path, class:"back-btn" %>
