<h2>Log in</h2>

<div class='login-flash-message'>
  <%= flash[:notice] %>
  <%= flash[:alert] %>
</div>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "メールアドレス" %><span class="indispensable">必須</span><br />
    <%= f.email_field :email, autofocus: true, placeholder: "kn0000@thcu.ac.jp", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><span class="indispensable">必須</span><br />
    <%= f.password_field :password, placeholder: "123456", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
