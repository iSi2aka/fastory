<div class='main-body'>
  <%= render "shared/side_header" %>
  
  <%= render "shared/menus/post_index"%>
  
  <div class='main'>
   <%= render "shared/top_header/login" %>
    
    <div class='login-form'>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>

      <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
        <%= render "shared/error_messages2", model: f.object %>

        <div class="login-field">
          <%= f.label "メールアドレス" %><span class="indispensable">必須</span><br />
          <%= f.email_field :email, autofocus: true, placeholder: "kn0000@thcu.ac.jp", autocomplete: "email" %>
        </div>

        <div class="login-field">
          <%= f.label "パスワード" %><span class="indispensable">必須</span><br />
          <%= f.password_field :password, placeholder: "abc1234", autocomplete: "current-password" %>
        </div>

        <div class="btn-contents">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
