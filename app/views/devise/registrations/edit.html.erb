<div class='main-body'>
  <%= render "shared/side_header" %>
  
  <%= render "shared/menus/post_index"%>
  
  <div class='main'>
   <%= render "shared/top_header/login" %>
    
    <div class='login-form'>
      <%= form_for(resource, url: user_registration_path, method: :put) do |f| %>
        <%= render "shared/error_messages2", model: f.object %>

        <div class="login-field">
          <%= f.label "ニックネーム" %><span class="indispensable">必須</span><br />
          <%= f.text_area :nickname, placeholder: "例)アンちゃん", autocomplete: "nickname" %>
        </div>

        <div class="login-field">
          <%= f.label "メールアドレス" %><span class="indispensable">必須</span><br />
          <%= f.email_field :email, autofocus: true, placeholder: "kn0000@thcu.ac.jp", autocomplete: "email" %>
        </div>

        <div class="login-field">
          <%= f.label "所属" %><span class="indispensable">必須</span><br />
          <%= f.text_area :department, placeholder: "例)THCU 立川看護学部", autocomplete: "new-password" %>
        </div>

        <div class="btn-contents">
          <%= f.submit "更新する" %>
        </div>
      <% end %>
    </div>
  </div>
</div>