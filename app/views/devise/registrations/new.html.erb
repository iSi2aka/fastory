<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "shared/error_messages", model: f.object %>

  <div class="field">
      <%= f.label "ニックネーム" %><span class="indispensable">必須</span><br />
      <%= f.text_area :nickname, placeholder: "例)アンちゃん", autocomplete: "nickname" %>
    </div>

  <div class="field">
    <%= f.label "メールアドレス" %><span class="indispensable">必須</span><br />
    <%= f.email_field :email, autofocus: true, placeholder: "kn0000@thcu.ac.jp", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><span class="indispensable">必須</span>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "123456", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード再入力" %><span class="indispensable">必須</span><br />
    <%= f.password_field :password_confirmation, placeholder: "123456", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "所属" %><span class="indispensable">必須</span><br />
    <%= f.text_area :department, placeholder: "例)THCU 立川看護学部", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
