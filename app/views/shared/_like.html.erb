<% if user_signed_in? && post.liked_by?(current_user)%>
  <%=link_to post_likes_path(post.id),  data: { turbo_method: :delete }, class: "post_likes" , remote: true do %>
    <%= image_tag("ハートのアイコン素材 1 (青).png", class: "liked-icon") %>
  <% end %>
<% else %>
  <%=link_to post_likes_path(post.id), data: { turbo_method: :post }, class: "post_likes" , remote: true do %>
    <%= image_tag("ハートのアイコン素材 1 (灰).png", class: "like-icon") %>
  <% end %>
<% end %>